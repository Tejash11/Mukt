<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Application_Fragment2">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/upper_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/details_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="-7dp"
                        android:src="@drawable/vec_arrow" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/org_logo_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:layout_toRightOf="@id/details_back"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00FFFFFF"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/org_logo"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/nmba_logo" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/org_logo_detail"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Content Writer"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Nasha Mukt Bharat Abhiyaan"
                            android:textColor="@color/black"
                            android:textSize="13sp" />


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#6BF6F6F6"
                    android:layout_below="@id/upper_details"
                    android:elevation="2dp"/>

                <RelativeLayout
                    android:layout_below="@id/upper_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/jd"
                        android:background="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Role Desription"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_below="@id/jd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="The role of a content writer is to brainstorm and create impactful and artistic content for the events and campaigning of Nasha Mukt Bharat Abhiyaan. The effectiveness of contents produced by the NMBA depends on the quality of writing of content writers. Read more..."
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/skills"
                        android:layout_below="@id/description"
                        android:background="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Skills"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/skills_desc"
                        android:layout_below="@id/skills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="&#8226; Communication Skills\n&#8226; Oratory Skills\n&#8226; Language\n&#8226; Organization Skills&#8226; Creative\n&#8226; Passionate\n&#8226; Hard Working"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/perks"
                        android:layout_below="@id/skills_desc"
                        android:background="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Perks"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/perks_desc"
                        android:layout_below="@id/perks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="&#8226; 10,000 Mukt Credits\n&#8226; Appreciation Goodies\n&#8226; Certificate of Internship\n&#8226; Opportunity of a full time role at NMBA"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/about"
                        android:layout_below="@id/perks_desc"
                        android:background="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Know the organization"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/about_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/about"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Ministry of Social Justice &amp; Empowerment which is the Nodal Ministry for Drug Demand Reduction has formulated and launched Nasha Mukt Bharat Abhiyaan (NMBA) on 15th August 2020, in 272 Districts across 32 State/Union Territories identified as most vulnerable in terms of usage of drugs in the country. Ream more..."
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_below="@id/about_desc"
                        android:background="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Contact"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="100dp"
                        android:layout_below="@id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/call"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_call"/>
                        <ImageView
                            android:id="@+id/mail"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_mail"/>
                        <ImageView
                            android:id="@+id/insta"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_insta"/>
                        <ImageView
                            android:id="@+id/fb"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_fb"/>
                        <ImageView
                            android:id="@+id/twitter"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_twitter"/>


                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>





</FrameLayout>