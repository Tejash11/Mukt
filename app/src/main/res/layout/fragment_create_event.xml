<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".event_section.create_event">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:padding="18dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="Create New Event"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/add_image_outline"
            android:layout_margin="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:layout_centerInParent="true"
                android:id="@+id/plus_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_btn"
                android:text="Add Cover Image"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"/>




        </RelativeLayout>

        <View
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#B8B8B8"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Event Details"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Name"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Name"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Type"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nukkad Natak/Graphics.. etc"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Date"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="DD/MM/YYYY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Day"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="XYZ-Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Time"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="12:00 - 24:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Organizer Name"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="XYZ Institute"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Venue Name"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="XYZ Auditorium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Venue Address"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Event Documentation"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Timeline, features and Prizes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Latitude"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Latitude"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Longitude"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Longitude"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/circular_blue_border"/>

        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:text="Add Event"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/add_btn"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/blue_circular_solid"/>


    </LinearLayout>

    </ScrollView>
</FrameLayout>