<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="240dp"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/course_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/vec_course"
        android:scaleType="centerCrop"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Management Training"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="17dp"
                android:textColor="@color/primary_blue"/>

            <TextView
                android:id="@+id/org_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMBA"
                android:fontFamily="@font/poppins_semibold"
                android:layout_below="@id/course_title"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-5dp"
                android:textColor="#8693FC"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/course_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A5265FF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="#00FFFFFF">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/arrow_forward_blue"
                        android:padding="5dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/org_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1A5265FF"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:background="#00FFFFFF">

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40 hr"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>