<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".event_section.event_view">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/event_view_frag"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:layout_margin="20dp"
                android:background="@drawable/light_blue_solid_dark_blue_outline"
                android:src="@drawable/share_icon"
                android:padding="5dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:layout_margin="20dp"
                android:background="@drawable/light_blue_solid_dark_blue_outline"
                android:src="@drawable/bookmark_outline_icon"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Participate"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:id="@+id/view_meta"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/blue_circular_solid"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


    </LinearLayout>

