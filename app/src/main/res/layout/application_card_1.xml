<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/application_card1_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_outlined_yellow">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/org_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4DB89637">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#00FFFFFF">
                <ImageView
                    android:id="@+id/org_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/org_logo3"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/job_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Content Writer"
            android:textColor="#B89637"
            android:textSize="22sp"/>


            <ImageView
                android:id="@+id/forward_btn_application"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/job_name"
                android:layout_marginLeft="-40dp"
                android:layout_marginBottom="41dp"
                android:src="@drawable/arrow_forward_yellow" />





    </RelativeLayout>
</androidx.cardview.widget.CardView>